<h1>
  Welcome to Todo App

</h1>
<h3 >
<button class="btn btn-success"><%= link_to 'Create New Task', new_task_path %></button>

</h3>
<br><br><br>
<h2>List of all the Tasks in our Todo-App</h2>
 
 <h4>
<table class="table table-stripped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3" >Actions</th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.text %></td>
      <td><button class="btn btn-success"><%= link_to 'Show', task_path(task) %></button></td>
      <td><button class="btn btn-warning"><%= link_to 'Edit', edit_task_path(task) %></button></td>
      <td><button class="btn btn-danger"><%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      
    </tr>
  <% end %>
</table>
</h4>